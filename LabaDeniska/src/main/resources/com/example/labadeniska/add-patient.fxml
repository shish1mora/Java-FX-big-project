<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.DatePicker?>
<AnchorPane prefHeight="493.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.labadeniska.controllers.AddPatientController">
    <children>
        <VBox prefHeight="368.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="%label.lastNamePatient">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="tfLastName">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>
                <Label text="%label.firstNamePatient">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="tfFirstName">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>

                <Label text="%label.patronymicPatient">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="tfPatronymic">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>

                <Label text="%label.dateOfBirthPatient">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <DatePicker fx:id="dpDateOfBirth">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </DatePicker>

                <Label text="%label.passSeriesPatient">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="tfPassSeries">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>

                <Label text="%label.passNumberPatient">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="tfPassNumber">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </TextField>
            </children>
        </VBox>
        <Button fx:id="btn_ok" layoutX="14.0" layoutY="454.0" mnemonicParsing="false" onAction="#onOk" prefHeight="25.0"
                prefWidth="57.0" text="%button.ok"/>
        <Button fx:id="btn_cancel" layoutX="106.0" layoutY="454.0" mnemonicParsing="false" onAction="#onCancel"
                prefHeight="25.0" prefWidth="87.0" text="%button.cancel"/>
    </children>
</AnchorPane>
