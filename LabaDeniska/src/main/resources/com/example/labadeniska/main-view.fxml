<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.labadeniska.controllers.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
      
        <Label fx:id="welcomeText" layoutX="117.0" layoutY="52.0" text="%label.welcomeText">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
        <Button fx:id="bt_doctor" alignment="CENTER" layoutX="206.0" layoutY="97.0" nodeOrientation="LEFT_TO_RIGHT" onAction="#onDoctor" prefHeight="36.0" prefWidth="85.0" text="%button.doctor" />
         <Button fx:id="bt_patient" alignment="CENTER" layoutX="67.0" layoutY="97.0" onAction="#onPatient" prefHeight="36.0" prefWidth="86.0" text="%button.patient" />
         <Button fx:id="bt_appointment" alignment="CENTER" layoutX="137.0" layoutY="150.0" onAction="#onAppointment" prefHeight="36.0" prefWidth="86.0" text="%button.appointment" />
      </children>
   </AnchorPane>
</VBox>
